<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body><header class="shadow-sm">
      <nav class="navbar navbar-expand-lg bg-light ">
        <div class="container">
          <%= link_to "LOGO", root_path, class:"navbar-brand" %>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">

          <% if admin_signed_in? %>
            <li>
              <%= link_to "商品一覧", admin_items_path %>
            </li>
            <li>
              <%= link_to "会員一覧", admin_customers_path %>
            </li>
            <li>
              <%= link_to "注文履歴一覧", admin_root_path %>
            </li>
            <li>
              <%= link_to "ジャンル一覧", admin_genres_path %>
            </li>
            <li>
              <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
            </li>
          <% elsif customer_signed_in? %>
            <li>
              <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
            </li>
          <% else %>
            <li>
              <%= link_to "About", public_about_path %>
            </li>
            <li>
              <%= link_to "新規登録", new_customer_registration_path %>
            </li>
            <li>
              <%= link_to "ログイン", customer_session_path %>
            </li>
          <% end %>
          </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>

    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p></p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
