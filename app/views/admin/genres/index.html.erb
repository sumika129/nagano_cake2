<h3>ジャンル一覧・追加</h3>

<%= form_with model: [:admin,@genre] do |f| %>
<table>
  <tr>
    <th>ジャンル名</th>
    <td><%= f.text_field :name %></td>
    <td><%= f.submit '新規登録' %></td>
  </tr>
</table>
<% end %>
<br>
<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <td></td>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <tr>
      <td><%= genre.name %></td>
      <td><%= link_to "編集する", edit_admin_genre_path(genre) %></td>
    </tr>
  </tbody>
  <% end %>
</table>
