<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>

    <table>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <% if @customer.is_deleted %>
        <td>退会</td>
        <% else %>
        <td>有効</td>
        <% end %>
      </tr>
      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class:"btn btn-sm btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path, class:"btn btn-sm btn-primary" %>
    </table>

    </div>
  </div>
</div>