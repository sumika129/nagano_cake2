<h3>注文情報確認</h3>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
    </tr>
  </tbody>
  <% @total += cart_item.subtotal %>
  <% end %>
</table>

<table>
  <tr>
    <th>送料</th>
    <td><%= @postage %></td>
  </tr>
  <tr>
    <th>商品合計</th>
    <td><%= @total %></td>
  </tr>
  <tr>
    <th>請求金額</th>
    <td><%= @total + @postage %></td>
  </tr>
</table>

<h4>支払方法</h4>
  <%= @order.payment_method %>
<h4>お届け先</h4>
  <%= @order.postal_code  %>
  <%= @order.address %>
  <%= @order.name %>
  
<h4><%= link_to "注文を確定する",  %></h4>

