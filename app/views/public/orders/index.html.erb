<h3>注文履歴一覧</h3>

<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
    </tr>
  </thead>
  <tbody>
    <%= @order.each do |order| %>
    <tr>
      <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.postal_code %><%= order.address %><br><%= order.name %></td>
      <td><%#= order. %></td>
      <td><%= order.billing_amount %></td>
      <td><%= order.status %></td>
      <td><%= link_to "表示する", public_order_path(order.id) %></td>
    </tr>
    <% end %>
  </tbody>
</table>