<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h3>注文履歴詳細</h3>

    <h4>注文情報</h4>
    <table>
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td><%= @order.payment_method %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status %></td>
      </tr>
    </table>

    <h4>請求情報</h4>
    <table>
      <tr>
        <th>商品合計</th>
        <td><%= @order.billing_amount - @order.postage %></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.postage %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.billing_amount %></td>
      </tr>
    </table>

    <h4>注文内容</h4>
    <table>
      <thead>
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <%= @order_detail.each do |order_detail| %>
        <tr>
          <td><%= order_detail.item.name %></td>
          <td><%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><%= order_detail.price * order_detail.amount %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    </div>
  </div>
</div>