<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <h3>マイページ</h3>

    <table>
      <tr>
        <th>登録情報</th>
        <td><%= link_to "編集する", edit_public_customer_path(@customer), class:"btn btn-sm btn-success" %></td>
      </tr>
    </table>

    <table>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>

    <table>
      <tr>
        <th>配送先</th>
        <td><%= link_to "一覧を見る", public_addresses_path, class:"btn btn-sm btn-primary" %></td>
      </tr>
    </table>
    <table>
      <tr>
        <th>注文履歴</th>
        <td><%= link_to "一覧を見る", public_orders_path(current_customer), class:"btn btn-sm btn-primary" %></td>
      </tr>
    </table>

    </div>
  </div>
</div>