<h3>ショッピングカート</h3>

<table>
  <tr>
    <td><%= link_to "カートを空にする", destroy_all_public_cart_items_path, method: :delete %></td>
  </tr>
</table>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_item.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td>
        <%= form_with model: cart_item, url:public_cart_item_path(cart_item),method: :patch do |f| %>
          <%= f.select :amount, *[1..5] %>
          <%= f.submit "変更" %>
        <% end %>
      </td>
      <td><%= cart_item.subtotal %></td>
      <td><%= link_to "削除する", public_cart_item_path(cart_item), method: :delete %></td>
    </tr>
  </tbody>
  <% @total += cart_item.subtotal %>
  <% end %>
</table>

<table>
  <tr>
    <th>合計金額</th>
    <td><%= @total %></td>
  </tr>
  <tr>
    <td><%= link_to "買い物を続ける", public_items_path %></td>
    <td><%= link_to "情報入力に進む", new_public_order_path %></td>
  </tr>
</table>
