<h3>ショッピングカート</h3>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <% @cart_item.each do |cart_item| %>
  <tbody>
    <tr>
      <td><%= cart_item.item.name %></td>
      <td><%= cart_item.item.with_tax_price %></td>
      <td><%= cart_item.amount %></td>
      <td><%= cart_item.subtotal %></td>
      <td></td>
    </tr>
  </tbody>
  <% @total += cart_item.subtotal %>
  <% end %>
</table>

<table>
  <tr>
    <th>合計金額</th>
    <td><%= @total %></td>
  </tr>
</table>
