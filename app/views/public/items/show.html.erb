<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

    <table>
      <tr>
        <th><%= image_tag @item.get_image(100,100) %></th>
      </tr>
      <tr>
        <td>
          <%= @item.name %><br>
          <%= @item.introduction %><br>
          ¥<%= @item.with_tax_price %>(税込)<br>

          <%= form_with model: @cart_item, url:public_cart_items_path,method: :post do |f| %>
            <%= f.select :amount, *[1..5], {prompt: "個数選択"} %>
            <%= f.hidden_field :item_id, :value => @item.id %>
            <%= f.submit "カートに入れる", class:"btn btn-sm btn-success" %>
          <% end %>
        </td>
      </tr>
    </table>

    </div>
  </div>
</div>
